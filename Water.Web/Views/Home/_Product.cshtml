<div class="agile-grids">
    <div class="agile-tables">
        <div class="w3l-table-info">
            <h3>Ассортимент</h3>
            <a class="create-link" href="/#product/create"><i class="fa fa-plus"></i> Добавить</a>
            <table id="table">
                <thead>
                    <tr>
                        <th class="text-center">№</th>
                        <th>Название</th>
                        <th class="text-center">Объём</th>
                        <th class="text-center">Цена</th>
                        <th class="text-center">В наличии</th>
                        <th class="text-center">Действия</th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: list">
                    <tr>
                        <td class="text-center" data-bind="text: ((($parent.selectedPage() - 1) * $parent.selectedPageSize()) + $index() + 1)"></td>
                        <td data-bind="text: productName()"></td>
                        <td class="text-center"></td>
                        <td class="text-center" data-bind="text: cost"></td>
                        <td class="text-center" data-bind="text: inStock"></td>
                        <td class="text-center actions">
                            <a href="#" data-bind="attr : { href: '/#product/' + productId() }, tooltip: { title: 'Перейти к редактированию', placement: 'left', trigger: 'hover' }"><i class="fa fa-pencil text-success"></i></a>
                            <a href="#" data-bind="click: $parent.removeProduct, tooltip: { title: 'Удалить', placement: 'bottom', trigger: 'hover' }"><i class="fa fa-times text-danger"></i></a>
                        </td>
                    </tr>
                </tbody>
            </table>
            <!-- Pagination -->
            <div class="row text-center" style="margin-top: 0.5em;">
                <div class="col-md-3">
                    <form class="form-inline">
                        <div class="form-group" style="margin-left: -5em;">
                            <label for="">Показывать: </label>
                            <select class="form-control" data-bind="options: pageSizes, value: selectedPageSize, event : { change: pageSizeChanged }"></select>
                        </div>
                    </form>
                </div>
                <div class="col-md-6">
                    <!-- ko if: pagesCount() > 1 -->
                    <nav>
                        <ul class="pagination">
                            <li>
                                <a href="#" aria-label="Previous" data-bind="click: function () { selectedPageChanged(selectedPage() - 1); }">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            <!-- ko foreach: new Array(pagesCount()) -->
                            <!-- ko if: $index() >= $parent.selectedPage() - 4 && $index() <= $parent.selectedPage() + 2 -->
                            <li data-bind="attr: { 'class' : $parent.selectedPage() == ($index() + 1) ? 'active' : '' }">
                                <a href="#" data-bind="text: $index()+1, click: function () { $parent.selectedPageChanged($index() + 1); }"></a>
                            </li>
                            <!-- /ko -->
                            <!-- /ko -->
                            <li>
                                <a href="#" aria-label="Next" data-bind="click: function () { selectedPageChanged(selectedPage() + 1); }">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <!-- /ko -->
                </div>
                <div class="col-md-3">
                    <form class="form-inline">
                        <div class="form-group pull-right">
                            <label for="">Найдено: </label>
                            <label class="form-control" data-bind="text: productsCount()"></label>
                        </div>
                    </form>
                </div>
            </div>
            <!-- End of pagination -->
            <!-- /ko -->
            @*</section>*@
        </div>
    </div>
</div>
